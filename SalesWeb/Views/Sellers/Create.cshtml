@model SalesWeb.Models.ViewsModels.SellerFormViewModel;
@{
    ViewData["Title"] = "Cadastrar Vendedor";
}
<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">            
            <div class="form-group">
                <label asp-for="Seller.Name"></label>
                <input asp-for="Seller.Name" class="form-control" />
                <span asp-validation-for="Seller.Name" class="text-danger"></span> @*mostra a validação pendente em cada campo*@
            </div>
            <div class="form-group">
                <label asp-for="Seller.Email"></label>
                <input asp-for="Seller.Email" class="form-control"/>
                <span asp-validation-for="Seller.Email" class="text-danger"></span> @*mostra a validação pendente em cada campo*@
            </div>
            <div class="form-group">
                <label asp-for="Seller.Date"></label>
                <input asp-for="Seller.Date" class="form-control"/>
                <span asp-validation-for="Seller.Date" class="text-danger"></span> @*mostra a validação pendente em cada campo*@
            </div>
            <div class="form-group">
                <label asp-for="Seller.BaseSalary"></label>
                <input asp-for="Seller.BaseSalary" class="form-control"/>
                <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span> @*mostra a validação pendente em cada campo*@
            </div>
            <div class="form-group">
                <label asp-for="Seller.DepartmentId" class="control-label"></label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Name"))" class="form-control"></select>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
            <br>
            <div>
                <a asp-action="Index">Voltar à lista</a>
            </div>
        </form>
    </div>
</div>

